BOX = "chef/centos-7.0"
#BOX = "box-cutter/fedora21"
#BOX = "box-cutter/fedora20"

Vagrant.configure(2) do |config|
  config.vm.box = BOX
  config.vm.provider "virtualbox" do |vb|
    vb.customize ["modifyvm", :id, "--memory", "8192"]
    vb.customize ["modifyvm", :id, "--cpus", "4"]
  end
#  if Vagrant.has_plugin?("vagrant-cachier")
#    config.cache.scope = :box
#  end
  if Vagrant.has_plugin?("vagrant-hostmanager")
    config.hostmanager.enabled = true
    config.hostmanager.manage_host = true
    config.hostmanager.ignore_private_ip = false
    config.hostmanager.include_offline = true
  end
  config.vm.synced_folder '.', '/vagrant', disabled: true
  config.vm.define "compute001" do |node|
    node.vm.hostname= "compute001"
    node.vm.network :private_network, ip: '10.10.0.20'
    node.vm.network :private_network, ip: '10.0.0.20', virtualbox__intnet: "tunnel"
    node.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook.yaml"
    end
  end
  config.vm.define "compute002" do |node|
    node.vm.hostname= "compute002"
    node.vm.network :private_network, ip: '10.10.0.21'
    node.vm.network :private_network, ip: '10.0.0.21', virtualbox__intnet: "tunnel"
    node.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook.yaml"
    end
  end
  config.vm.define "network" do |node|
    node.vm.hostname= "network"
    node.vm.network :private_network, ip: '10.10.0.30'
    node.vm.network :private_network, ip: '10.0.0.30', virtualbox__intnet: "tunnel"
    node.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook.yaml"
    end
  end
  config.vm.define "storage" do |node|
    node.ssh.shell = "bash -c 'BASH_ENV=/etc/profile exec bash'"
    node.vm.box = 'ubuntu/trusty64'
    node.vm.hostname= "storage"
    node.vm.network :private_network, ip: '10.10.0.40'
    node.vm.network :private_network, ip: '10.0.0.40', virtualbox__intnet: "tunnel"
    node.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook.yaml"
    end
    node.vm.provider "virtualbox" do |vb|
      vb.customize ['createhd', '--filename', 'dcd3ac98.vdi', '--size', 65536]
      vb.customize ['storageattach', :id, '--storagectl', 'SATAController', '--port', 1, '--device', 0, '--type', 'hdd', '--medium', 'dcd3ac98.vdi']
    end
  end
  config.vm.define "controller", primary: true do |node|
    node.vm.hostname= "controller"
    node.vm.network :private_network, ip: '10.10.0.10'
    node.vm.network :private_network, ip: '10.0.0.10', virtualbox__intnet: "tunnel"
    node.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook.yaml"
    end
    node.vm.provider "virtualbox" do |vb|
      vb.customize ["modifyvm", :id, "--memory", "16384"]
      vb.customize ["modifyvm", :id, "--cpus", "4"]
    end
    node.vm.provider "virtualbox" do |vb|
      vb.customize ['createhd', '--filename', 'e7a31749.vdi', '--size', 65536]
      vb.customize ['storageattach', :id, '--storagectl', 'IDE Controller', '--port', 1, '--device', 0, '--type', 'hdd', '--medium', 'e7a31749.vdi']
      vb.customize ['createhd', '--filename', '7dcc603c.vdi', '--size', 65536]
      vb.customize ['storageattach', :id, '--storagectl', 'IDE Controller', '--port', 1, '--device', 1, '--type', 'hdd', '--medium', '7dcc603c.vdi']
    end
  end
end
